<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/activity_reward_scrollview"
    android:scrollbars="none"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">

            <TextView
                android:id="@+id/event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="[2017-9-20 9:30-10:30] 国学经典-论语抢答PK赛"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:textColor="@color/black_text_color"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space_10"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/space_14"
                android:paddingRight="@dimen/space_10"
                android:paddingTop="@dimen/space_14"
                android:text="评分及标准"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_16"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:text="查看评价规则"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <include layout="@layout/common_comment_ratingbar_layout"/>

        <TextView
            android:id="@+id/activity_reward_add_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/space_7"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_10"
            android:paddingTop="@dimen/space_7"
            android:text="奖品奖励"
            android:textColor="#999999"
            android:background="@color/color1"
            android:textSize="@dimen/text_size_16" />


        <com.zhongke.weiduo.mvp.ui.widget.ListViewForScrollview
            android:id="@+id/activity_award_prize_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.zhongke.weiduo.mvp.ui.widget.ListViewForScrollview>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="gone"
            android:background="@color/spline_color2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="爸爸对琳琳的评价:"
            android:textColor="@color/gray_text_color"/>

        <TextView
            android:id="@+id/award_evaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/text_666666"
            android:text="你是一个很有个性的小姑娘,性格开朗又独立,有个人思想,做事踏实,聪明机智,学习成绩优秀,希望在学校上课老师希望你能积极地融入集体,快乐地在学校里生活!"/>

    </LinearLayout>

</ScrollView>