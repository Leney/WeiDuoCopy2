<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:paddingStart="@dimen/space_10">

    <View
        android:id="@+id/first_level_left_point"
        android:layout_width="@dimen/space_19"
        android:layout_height="@dimen/space_19"
        android:background="@drawable/circle_gray_stroke_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/first_level_node_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_5"
        android:text="名称"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/text_666666"
        app:layout_constraintBottom_toBottomOf="@+id/first_level_left_point"
        app:layout_constraintLeft_toRightOf="@+id/first_level_left_point"
        app:layout_constraintTop_toTopOf="@+id/first_level_left_point"/>

    <View
        android:id="@+id/first_level_expand_line"
        android:layout_width="1px"
        android:layout_height="0dp"
        android:background="@color/tree_node_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/first_level_left_point"
        app:layout_constraintRight_toRightOf="@id/first_level_left_point"
        app:layout_constraintTop_toBottomOf="@id/first_level_left_point"/>
</android.support.constraint.ConstraintLayout>