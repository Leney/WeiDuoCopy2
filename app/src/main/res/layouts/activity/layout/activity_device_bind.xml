<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <TextView
        android:id="@+id/device_code_bg_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/device_code_guideline2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/device_code_guideline1" />

    <ImageView
        android:id="@+id/device_code_icon_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="17.7dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/device_code_bg_1"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/device_code_bg_1" />

    <TextView
        android:id="@+id/device_code_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="刘小小"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/device_code_tip_tv"
        app:layout_constraintLeft_toRightOf="@+id/device_code_icon_iv"
        app:layout_constraintTop_toTopOf="@+id/device_code_icon_iv" />

    <TextView
        android:id="@+id/device_code_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="的Hailo"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/device_code_icon_iv"
        app:layout_constraintLeft_toRightOf="@+id/device_code_icon_iv"
        app:layout_constraintTop_toBottomOf="@+id/device_code_title_tv" />

    <TextView
        android:id="@+id/device_code_bg_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/device_code_guideline4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/device_code_guideline3" />

    <TextView
        android:id="@+id/device_bind_character_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.3dp"
        android:text="我的角色："
        android:textColor="#666666"

        app:layout_constraintBottom_toBottomOf="@+id/device_code_bg_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/device_code_bg_2" />

    <TextView
        android:id="@+id/device_bind_character_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21.3dp"
        android:textColor="#333333"
        android:textSize="16.4sp"
        app:layout_constraintBottom_toBottomOf="@+id/device_code_bg_2"
        app:layout_constraintLeft_toRightOf="@+id/device_bind_character_tip_tv"
        app:layout_constraintTop_toTopOf="@+id/device_code_bg_2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/right"
        app:layout_constraintBottom_toBottomOf="@+id/device_code_bg_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/device_code_bg_2" />

    <TextView
        android:id="@+id/device_bind_bg_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#ffffff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/device_code_guideline5" />
    <TextView
        android:id="@+id/device_bind_btn"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="39dp"
        android:background="#1cbf61"
        android:text="关联"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/device_bind_bg_3"
        app:layout_constraintRight_toRightOf="@+id/device_bind_bg_3"
        app:layout_constraintBottom_toBottomOf="@+id/device_bind_bg_3"
        app:layout_constraintTop_toTopOf="@+id/device_bind_bg_3"
        android:layout_height="0dp" />
    <android.support.constraint.Guideline
        android:id="@+id/device_code_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0176" />

    <android.support.constraint.Guideline
        android:id="@+id/device_code_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1408" />

    <android.support.constraint.Guideline
        android:id="@+id/device_code_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1584" />

    <android.support.constraint.Guideline
        android:id="@+id/device_code_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2441" />

    <android.support.constraint.Guideline
        android:id="@+id/device_code_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9044" />
</android.support.constraint.ConstraintLayout>