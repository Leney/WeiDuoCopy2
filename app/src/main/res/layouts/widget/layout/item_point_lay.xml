<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/space_48"
        android:layout_height="@dimen/space_48">

        <ImageView
            android:id="@+id/item_point_icon"
            android:layout_width="@dimen/space_46"
            android:layout_height="@dimen/space_46"
            android:layout_gravity="bottom"
            android:src="@mipmap/ic_target"/>

        <TextView
            android:id="@+id/item_point_num"
            android:layout_width="@dimen/space_18"
            android:layout_height="@dimen/space_18"
            android:layout_gravity="right|top"
            android:background="@drawable/circle_red_in_white_out_bg_shape"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="@dimen/space_10"/>
    </FrameLayout>

    <TextView
        android:id="@+id/item_point_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_4"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/text_size_12"
        android:text="目标"/>
</LinearLayout>