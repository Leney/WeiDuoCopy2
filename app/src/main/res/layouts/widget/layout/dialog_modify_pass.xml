<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_shape"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/tv1"
        style="@style/hardware"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="修改登录密码"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_line"
        style="@style/hardware_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <TextView
        android:id="@+id/tv2"
        style="@style/hardware"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="原  密  码："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_line" />

    <EditText
        android:id="@+id/infos_input"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/member_add_btn_shape"
        android:paddingLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv2"
        app:layout_constraintLeft_toRightOf="@+id/tv2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv2" />

    <TextView
        android:id="@+id/tv3"
        style="@style/hardware"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="新  密  码："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/member_add_btn_shape"
        android:paddingLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv3"
        app:layout_constraintLeft_toRightOf="@+id/tv3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv3" />

    <TextView
        android:id="@+id/tv4"
        style="@style/hardware"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="确认密码："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv3" />

    <EditText
        android:id="@+id/et3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/member_add_btn_shape"
        android:paddingLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv4"
        app:layout_constraintLeft_toRightOf="@+id/tv4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv4" />

    <TextView
        android:id="@+id/tv_cancel"
        style="@style/hardware"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/member_add_btn_shape"
        android:gravity="center"
        android:text="取消"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_determine"
        app:layout_constraintTop_toBottomOf="@+id/tv4" />

    <TextView
        android:id="@+id/tv_determine"
        style="@style/hardware"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:background="@drawable/green_in_shape"
        android:gravity="center"
        android:text="确定"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@+id/tv_cancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_cancel" />
</android.support.constraint.ConstraintLayout>