<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/find_adapter_item_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/space_9"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:paddingTop="@dimen/space_10">

    <ImageView
        android:id="@+id/find_adapter_icon"
        android:layout_width="@dimen/space_100"
        android:layout_height="@dimen/space_80"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/default_img"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/space_10"
        android:layout_toEndOf="@id/find_adapter_icon"
        android:orientation="vertical">
        <!--活动名称-->
        <TextView
            android:id="@+id/find_adapter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="欺骗和诚实：一个让你学会博弈论，神奇"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/text_size_14"/>
        <!--时间-->
        <TextView
            android:id="@+id/find_adapter_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="时间: 2017.09.01"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/text_size_12"/>
        <!--地址-->
        <TextView
            android:id="@+id/find_adapter_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="地址: 深圳市南山区科技园赋安大厦5C"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/text_size_12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:orientation="horizontal">
            <!--点赞-->
            <TextView
                android:id="@+id/find_adapter_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/space_4"
                android:drawableStart="@drawable/ic_like_normal"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="1635"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/text_size_12"/>
            <!--评论-->
            <TextView
                android:id="@+id/find_adapter_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/space_4"
                android:drawableStart="@drawable/ic_comment"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="1635"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/text_size_12"/>
            <!--位置-->
            <TextView
                android:id="@+id/find_adapter_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/space_4"
                android:drawableStart="@drawable/ic_location2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="1635"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>