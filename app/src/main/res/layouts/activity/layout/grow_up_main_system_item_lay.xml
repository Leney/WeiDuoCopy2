<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recent_out_shape"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_8">

    <ImageView
        android:id="@+id/grow_up_main_system_item_icon"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_118"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/grow_up_main_system_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_5"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="深圳特区教育体系"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grow_up_main_system_item_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_5"
        android:background="@drawable/system_lab_shape"
        android:paddingBottom="@dimen/space_5"
        android:paddingEnd="@dimen/space_10"
        android:paddingStart="@dimen/space_7"
        android:paddingTop="@dimen/space_5"
        android:text="@string/system"
        android:textColor="@color/main_color"
        android:textSize="@dimen/text_size_12"
        android:layout_marginStart="1px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>