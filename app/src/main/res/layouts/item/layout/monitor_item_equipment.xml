<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="#333333"
        android:textSize="16sp" />
    <RelativeLayout
        android:id="@+id/rl_click"
        android:layout_width="33.3dp"
        android:layout_height="16.3dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14.7dp">
    <FrameLayout
        android:id="@+id/fl_on"
        android:layout_width="33.3dp"
        android:layout_height="16.3dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/jiankong_01" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/jiankong_03" />
    </FrameLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/fl_off"
        android:layout_width="33.3dp"
        android:layout_height="16.3dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/jiankong_02" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@drawable/jiankong_03" />
    </FrameLayout>
    </RelativeLayout>
    <LinearLayout
        android:gravity="right"
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@+id/tv_name">


        <TextView
            android:id="@+id/date_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingRight="5dp"
            android:text="@string/date"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/date_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingRight="5dp"
            android:textColor="#999999"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/angle_angle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingRight="5dp"
            android:text="@string/angle"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/angle_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingRight="5dp"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>