<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/gray_line_up"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:background="@color/edit_divider" />

    <ImageView
        android:id="@+id/schedule_child_iv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:src="@drawable/blue_point"
        android:layout_below="@id/gray_line_up" />

    <View
        android:id="@+id/gray_line_down"
        android:layout_width="1dp"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:background="@color/edit_divider"
        android:layout_below="@id/schedule_child_iv_point" />

    <TextView
        android:id="@+id/tv_behavior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="22dp"
        android:text="陪妈妈买菜"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_toRightOf="@id/schedule_child_iv_point"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/clock"
        android:layout_marginTop="23dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="23dp"
        android:text="10:00"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="开始时间"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/tv_start_date_time"
        android:layout_toEndOf="@id/schedule_child_iv_point" />

    <TextView
        android:id="@+id/tv_start_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_behavior"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/tv_start_time"
        android:layout_marginLeft="15dp"
        android:text="2017-10-10 8:00"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束时间"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/tv_end_date_time"
        android:layout_alignStart="@+id/tv_start_time" />

    <TextView
        android:id="@+id/tv_end_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_start_time"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@id/tv_end_time"
        android:layout_marginLeft="15dp"
        android:text="2017-10-10 9:00"
        android:textSize="12sp" />
</RelativeLayout>