<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scheme_detail_child_child_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/space_6"
    android:paddingEnd="@dimen/space_10"
    android:paddingStart="@dimen/space_14"
    android:paddingTop="@dimen/space_6">

    <View
        android:id="@+id/scheme_detail_child_child_point"
        android:layout_width="@dimen/space_8"
        android:layout_height="@dimen/space_8"
        android:background="@drawable/circle_gray_stroke_shape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scheme_detail_child_child_name"
        app:layout_constraintBottom_toBottomOf="@+id/scheme_detail_child_child_name"/>

    <TextView
        android:id="@+id/scheme_detail_child_child_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="名称"
        android:textColor="@color/text_666666"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintLeft_toRightOf="@+id/scheme_detail_child_child_point"
        app:layout_constraintRight_toLeftOf="@+id/scheme_detail_child_child_execute_name"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 执行人-->
    <TextView
        android:id="@+id/scheme_detail_child_child_execute_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_5"
        android:drawableEnd="@drawable/icon_right"
        android:drawablePadding="@dimen/space_5"
        android:text="父母"
        android:textColor="@color/text_666666"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintBottom_toBottomOf="@id/scheme_detail_child_child_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/scheme_detail_child_child_name"/>

    <TextView
        android:id="@+id/scheme_detail_child_child_target"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_2"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="[养成好的学习习惯]"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintLeft_toLeftOf="@id/scheme_detail_child_child_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scheme_detail_child_child_name"/>

</android.support.constraint.ConstraintLayout>