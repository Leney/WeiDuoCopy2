<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.youth.banner.Banner
            android:id="@+id/fragment_school_banner"
            android:layout_width="match_parent"
            android:layout_height="146.7dp"
            app:image_scale_type="center_crop"
            app:indicator_drawable_selected="@drawable/point_bg_enable"
            app:indicator_drawable_unselected="@drawable/point_bg_normal"
            app:indicator_height="5dp"
            app:indicator_margin="6dp"
            app:indicator_width="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_curriculum"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/curriculum" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/iv_curriculum"
                    android:layout_below="@+id/iv_curriculum"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="课程"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/expert" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/iv2"
                    android:layout_below="@+id/iv2"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="专家"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_mechanism"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/mechanism" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/iv_mechanism"
                    android:layout_below="@+id/iv_mechanism"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="机构"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#f1f2f3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38.3dp">

            <TextView
                android:id="@+id/view"
                android:layout_width="3dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.7dp"
                android:background="#1cbf61"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/view"
                android:layout_alignStart="@+id/view"
                android:layout_alignTop="@+id/view"
                android:paddingLeft="10.7dp"
                android:text="@string/recommended_courses"
                android:textColor="#323232"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>