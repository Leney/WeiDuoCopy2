<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.zhongke.weiduo.mvp.ui.widget.BaseTitleView
        android:id="@+id/find_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="58dp"/>

    <com.zhongke.weiduo.mvp.ui.widget.swiperefreshlayout.ScrollChildSwipeRefreshLayout
        android:id="@+id/fragment_find_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhongke.weiduo.mvp.ui.widget.recyclerview.LoadMoreRecyclerView
            android:id="@+id/find_fragment_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.zhongke.weiduo.mvp.ui.widget.swiperefreshlayout.ScrollChildSwipeRefreshLayout>
</LinearLayout>