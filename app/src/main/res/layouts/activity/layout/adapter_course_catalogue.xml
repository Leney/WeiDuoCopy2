<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/catalogue_adapter_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/space_16"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:paddingTop="@dimen/space_16"
        android:gravity="center_vertical"
        android:background="@drawable/catalogue_item_selector">

        <TextView
            android:id="@+id/catalogue_adapter_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:id="@+id/catalogue_adapter_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:paddingLeft="@dimen/space_8"
            android:paddingRight="@dimen/space_8"
            android:maxLines="1"
            android:text="器材:手机像素够用吗？光圈有多大？"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:id="@+id/catalogue_adapter_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23分钟"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/text_size_14"/>
    </LinearLayout>
</LinearLayout>