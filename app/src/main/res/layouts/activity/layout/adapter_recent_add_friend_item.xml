<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recent_list_item_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <!--头像-->
    <ImageView
        android:id="@+id/recent_list_item_icon"
        android:layout_width="@dimen/space_48"
        android:layout_height="@dimen/space_48"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="@dimen/space_16"
        android:layout_marginStart="@dimen/space_8"
        android:layout_marginTop="@dimen/space_11"
        android:src="@mipmap/default_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/recent_list_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_2"
        android:layout_marginStart="@dimen/space_8"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="琳琳"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/recent_list_item_icon"
        app:layout_constraintRight_toLeftOf="@+id/recent_list_item_time"/>

    <TextView
        android:id="@+id/recent_list_item_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_10"
        android:layout_marginStart="@dimen/space_8"
        android:layout_marginTop="@dimen/space_2"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="[图片]"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintLeft_toRightOf="@id/recent_list_item_icon"
        app:layout_constraintTop_toBottomOf="@id/guideline2"/>

    <TextView
        android:id="@+id/recent_list_refuse_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_10"
        android:layout_marginStart="@dimen/space_8"
        android:background="@color/red_ff0101"
        android:paddingBottom="@dimen/space_5"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:paddingTop="@dimen/space_5"
        android:text="拒绝"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintBottom_toBottomOf="@id/recent_list_item_msg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/recent_list_item_name"/>

    <TextView
        android:id="@+id/recent_list_handle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_10"
        android:layout_marginStart="@dimen/space_8"
        android:background="@color/white"
        android:paddingBottom="@dimen/space_5"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:paddingTop="@dimen/space_5"
        android:text="处理"
        android:textColor="@color/text_666666"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/recent_list_item_msg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/recent_list_item_name"/>

    <TextView
        android:id="@+id/recent_list_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_5"
        android:layout_marginStart="@dimen/space_8"
        android:background="@color/main_color"
        android:paddingBottom="@dimen/space_5"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:paddingTop="@dimen/space_5"
        android:text="同意"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintRight_toLeftOf="@id/recent_list_refuse_btn"
        app:layout_constraintTop_toTopOf="@id/recent_list_refuse_btn"/>

</android.support.constraint.ConstraintLayout>