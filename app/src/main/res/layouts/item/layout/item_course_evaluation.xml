<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:star="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/image_evaluation"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/image_evaluation"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/name_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文青"
            android:textColor="#333333"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="评分:"
                android:textColor="#999999"
                android:textSize="12sp" />

            <com.zhongke.weiduo.mvp.ui.widget.view.StarBar
                android:id="@+id/sb_evaluation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                star:starSize="40" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="第三方三大噶第三方gas的萨法撒旦发射点发的说法撒旦法撒旦"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>