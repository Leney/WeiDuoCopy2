<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/answer_reward_rorate_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/anwer_reward_large_bg" />

    <ImageView
        android:id="@+id/answer_reward_bg2_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/anwer_reward_bg2" />

    <ImageView
        android:id="@+id/answer_reward_bg3_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="21dp"
        android:src="@mipmap/anwer_reward_bg3" />

    <ImageView
        android:id="@+id/answer_reward_round_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/anwer_reward_bg4" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
       android:layout_marginBottom="70dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="-15dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/answer_reward_score_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="-8dp"
                android:src="@mipmap/anwer_reward_score" />

            <ImageView
                android:id="@+id/answer_reward_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-20dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/answer_reward_score_iv"
                android:src="@mipmap/anwer_reward_10_score" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/answer_reward_true_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@mipmap/anwer_reward_true" />

    </LinearLayout>


    <ImageView
        android:id="@+id/answer_reward_star_iv"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="center"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="90dp"
        android:src="@mipmap/anwer_reward_star" />
    <ImageView
        android:id="@+id/answer_reward_star_iv_2"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="65dp"
        android:src="@mipmap/anwer_reward_star" />

    <ImageView
        android:id="@+id/answer_reward_star_iv_3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_marginBottom="88dp"
        android:layout_marginLeft="3dp"
        android:src="@mipmap/anwer_reward_star" />
    <ImageView
        android:id="@+id/answer_reward_star_iv_4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="80dp"
        android:src="@mipmap/anwer_reward_star" />

    <ImageView
        android:id="@+id/answer_reward_star_iv_5"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="80dp"
        android:src="@mipmap/anwer_reward_star" />
    <ImageView
        android:id="@+id/answer_reward_star_iv_6"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="30dp"
        android:src="@mipmap/anwer_reward_star" />
</FrameLayout>