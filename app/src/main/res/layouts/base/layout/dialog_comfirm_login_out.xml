<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="6.7dp"
    android:paddingLeft="20.3dp"
    android:paddingRight="20.3dp"
    android:paddingTop="9dp">

    <TextView
        android:id="@+id/dialog_login_out_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提示"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/dialog_login_out_content"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22.7dp"
        android:gravity="center_horizontal"
        android:text="确认退出登录？"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_login_out_tips"/>

    <TextView
        android:id="@+id/dialog_login_out_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20"
        android:background="@drawable/shape_dialog_handle_token"
        android:paddingBottom="9.3dp"
        android:paddingLeft="31dp"
        android:paddingRight="31dp"
        android:paddingTop="9.3dp"
        android:text="取消"
        android:textColor="@color/text_666666"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_login_out_content"/>

    <TextView
        android:id="@+id/dialog_login_out_sure_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20"
        android:background="@drawable/shape_dialog_handle_token"
        android:paddingBottom="9.3dp"
        android:paddingLeft="31dp"
        android:paddingRight="31dp"
        android:paddingTop="9.3dp"
        android:text="确定"
        android:textColor="#fd4f4f"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/dialog_login_out_content"
        app:layout_constraintTop_toBottomOf="@+id/dialog_login_out_content"/>
</android.support.constraint.ConstraintLayout>