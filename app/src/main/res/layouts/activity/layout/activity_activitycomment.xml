<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activitycomment_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/activityresult_listview_item0">
        </include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#f0f0f0" />

        <TextView
            style="@style/text1style_activitycomment"

            android:text="核心培养要素评价" />

        <include layout="@layout/common_comment_ratingbar_layout"></include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#f0f0f0" />

        <TextView
            style="@style/text1style_activitycomment"

            android:layout_marginBottom="@dimen/space_10"
            android:layout_marginTop="@dimen/space_10"
            android:text="奖励" />

        <LinearLayout
            android:id="@+id/activitycomment_reward_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#f0f0f0" />

        <TextView
            style="@style/text1style_activitycomment"
            android:text="评价" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_10"
            android:background="@drawable/activitycomment_edittext_bg_shape"
            android:gravity="start"
            android:hint="请写下你的评价噢~"
            android:minLines="4"
            android:padding="@dimen/space_6"
            android:textColor="#cccccc"
            android:textColorHint="#cccccc"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_20"
            android:background="#f0f0f0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#1cbf61"
                android:gravity="center"

                android:paddingBottom="@dimen/space_20"
                android:paddingLeft="@dimen/space_32"
                android:paddingRight="@dimen/space_32"
                android:paddingTop="@dimen/space_20"
                android:text="提交评价"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
