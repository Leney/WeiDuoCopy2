<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/text2Style_activity_process"
        android:text="准备" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16.3dp"

        android:paddingTop="16.3dp">

        <TextView
            style="@style/text3Style_activity_process"
            android:drawableLeft="@drawable/activityprocess_green_bg_shape"
            android:text="时间"
            android:textColor="#333333" />

        <TextView
            style="@style/text4Style_activity_process"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/right"
            android:text="20107-5-22" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />


    <RelativeLayout
        android:id="@+id/activityprocess_listview_item_person_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16.3dp"

        android:paddingTop="16.3dp"

        android:paddingRight="@dimen/space_10"
>

        <TextView
            style="@style/text3Style_activity_process"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/microrudder_message_bg_shape"
            android:text="人员"
            android:drawableRight="@drawable/right"
            android:textColor="#333333" />

<!--        <TextView

            style="@style/text5style_activity_process"
            android:layout_alignParentRight="true" />-->
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

    <RelativeLayout
        android:id="@+id/activityprocess_listview_item_funds_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16.3dp"

        android:paddingTop="16.3dp"
        android:paddingRight="@dimen/space_10"
>

        <TextView
            style="@style/text3Style_activity_process"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/activityprocess_green_bg_shape"
            android:text="资金"
            android:drawableRight="@drawable/right"
            android:textColor="#333333" />

 <!--       <TextView

            style="@style/text5style_activity_process"
            android:layout_alignParentRight="true" />-->
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

    <RelativeLayout
        android:id="@+id/activityprocess_listview_item_use_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16.3dp"

        android:paddingTop="16.3dp"
        android:paddingRight="@dimen/space_10"
      >

        <TextView

            style="@style/text3Style_activity_process"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/right"
            android:drawableLeft="@drawable/activityprocess_green_bg_shape"
            android:text="用具"
            android:textColor="#333333" />
<!--
        <TextView

            style="@style/text5style_activity_process"
            android:layout_alignParentRight="true" />-->
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16.3dp"
        android:paddingTop="16.3dp">

        <TextView
            style="@style/text3Style_activity_process"
            android:drawableLeft="@drawable/activityprocess_green_bg_shape"
            android:text="活动场地："
            android:textColor="#333333" />

        <TextView
            style="@style/text4Style_activity_process"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="深圳市宝安区西乡中央大道" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />
</LinearLayout>