<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/space_10">

    <View
        android:id="@+id/grow_up_main_active_split_line"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/gray6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/grow_up_main_active_item_icon"
        android:layout_width="@dimen/space_100"
        android:layout_height="@dimen/space_80"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginStart="@dimen/space_10"
        android:scaleType="fitXY"
        android:src="@mipmap/default_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grow_up_main_active_split_line"/>

    <TextView
        android:id="@+id/grow_up_main_active_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_5"
        android:layout_marginTop="@dimen/space_2"
        android:text="数学知识PK赛"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintLeft_toRightOf="@id/grow_up_main_active_item_icon"
        app:layout_constraintTop_toTopOf="@id/grow_up_main_active_item_icon"/>

    <!-- 时间-->
    <TextView
        android:id="@+id/grow_up_main_active_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_2"
        android:drawablePadding="@dimen/space_5"
        android:drawableStart="@mipmap/small_time"
        android:gravity="center_vertical"
        android:text="2017.12.05 15:33"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/text_size_10"
        app:layout_constraintBottom_toBottomOf="@id/grow_up_main_active_item_icon"
        app:layout_constraintLeft_toLeftOf="@id/grow_up_main_active_item_name"
        app:layout_constraintLeft_toRightOf="@id/grow_up_main_active_item_icon"/>

    <!-- 人数-->
    <TextView
        android:id="@+id/grow_up_main_active_user_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_5"
        android:drawablePadding="@dimen/space_5"
        android:drawableStart="@mipmap/small_user"
        android:gravity="center_vertical"
        android:text="15人"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/text_size_10"
        app:layout_constraintBottom_toTopOf="@id/grow_up_main_active_item_time"
        app:layout_constraintLeft_toLeftOf="@id/grow_up_main_active_item_name"
        app:layout_constraintLeft_toRightOf="@id/grow_up_main_active_item_icon"/>

    <!-- 地址-->
    <TextView
        android:id="@+id/grow_up_main_active_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_5"
        android:drawablePadding="@dimen/space_5"
        android:drawableStart="@mipmap/small_location"
        android:gravity="center_vertical"
        android:text="15人"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/text_size_10"
        app:layout_constraintBottom_toTopOf="@id/grow_up_main_active_user_item_count"
        app:layout_constraintLeft_toLeftOf="@id/grow_up_main_active_item_name"
        app:layout_constraintLeft_toRightOf="@id/grow_up_main_active_item_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_5"
        android:background="@drawable/active_lab_shape"
        android:paddingBottom="@dimen/space_5"
        android:paddingEnd="@dimen/space_10"
        android:paddingStart="@dimen/space_7"
        android:paddingTop="@dimen/space_5"
        android:text="@string/act"
        android:textColor="#ff4a4a"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintLeft_toLeftOf="@id/grow_up_main_active_item_icon"
        app:layout_constraintTop_toTopOf="@id/grow_up_main_active_item_icon"/>

</android.support.constraint.ConstraintLayout>