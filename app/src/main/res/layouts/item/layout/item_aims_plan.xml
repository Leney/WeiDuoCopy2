<?xml version="1.0" encoding="utf-8"?>
<com.zhongke.weiduo.mvp.ui.widget.view.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_content"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="尊师重教"
                android:layout_centerVertical="true"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!--<TextView
                android:id="@+id/tv_system_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_name"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="[中国教育体系]"
                android:layout_centerVertical="true"
                android:textColor="#666666"
                android:textSize="16sp" />-->

            <TextView
                android:id="@+id/aims_plan_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:textSize="10sp"
                android:textColor="#666666"
                android:text="75%"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="6dp"
                android:layout_alignParentBottom="true"/>

            <ProgressBar
                android:id="@+id/aims_plan_progress"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_toLeftOf="@id/aims_plan_progress_text"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_marginLeft="10dp"
                android:progress="75"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:secondaryProgress="100"
                android:progressDrawable="@drawable/shape_aims_progressbar"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tv_delete"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/layout_content"
            android:background="#ff0000">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/delete_3" />
        </RelativeLayout>
    </RelativeLayout>
</com.zhongke.weiduo.mvp.ui.widget.view.SlidingButtonView>