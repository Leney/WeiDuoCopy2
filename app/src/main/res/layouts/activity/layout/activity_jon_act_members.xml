<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_12"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/space_12"
            android:paddingTop="@dimen/space_12"
            android:text="@string/target_num"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/act_members_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space_12"
            android:paddingTop="@dimen/space_12"
            android:text="10人"
            android:textColor="@color/gray_text_color"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_12"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/space_12"
            android:paddingTop="@dimen/space_12"
            android:text="@string/cur_join_num"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/act_members_cur_join_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space_12"
            android:paddingTop="@dimen/space_12"
            android:text="10人"
            android:textColor="@color/gray_text_color"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

    <GridView
        android:id="@+id/act_members_gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:numColumns="4"
        android:paddingBottom="@dimen/space_4"
        android:paddingTop="@dimen/space_4"
        android:verticalSpacing="@dimen/space_8"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_height"
        android:background="@color/spline_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_44"
        android:background="@color/white"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>