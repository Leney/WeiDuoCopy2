        android:layout_width="wrap_content"
        android:text="爸爸"
        android:textColor="#ffffff"
        android:background="@drawable/activityprize_show_name_shape"
        android:layout_marginTop="@dimen/space_15"
        android:layout_height="wrap_content" />
      <com.zhongke.weiduo.mvp.ui.widget.WapGridView
          android:id="@+id/activityprizeshow_item_gridView"
          android:layout_width="match_parent"
          android:layout_marginLeft="@dimen/space_20"
          android:numColumns="3"
          android:stretchMode="columnWidth"
          android:horizontalSpacing="@dimen/space_30"
          android:verticalSpacing="@dimen/space_20"
          android:layout_height="wrap_content">

      </com.zhongke.weiduo.mvp.ui.widget.WapGridView>
</LinearLayout>