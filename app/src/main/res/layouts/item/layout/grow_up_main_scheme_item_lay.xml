<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_10">

    <ImageView
        android:id="@+id/grow_up_main_scheme_item_icon"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_116"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grow_up_main_scheme_item_lab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1px"
        android:layout_marginTop="@dimen/space_5"
        android:background="@drawable/scheme_lab_shape"
        android:paddingBottom="@dimen/space_5"
        android:paddingEnd="@dimen/space_10"
        android:paddingStart="@dimen/space_7"
        android:paddingTop="@dimen/space_5"
        android:text="@string/scheme"
        android:textColor="#44b9f0"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grow_up_main_scheme_item_icon" />

    <TextView
        android:id="@+id/grow_up_main_scheme_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_5"
        android:layout_marginTop="@dimen/space_5"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="深圳特区教育体系深圳特区教育体系深圳特区教育体系深圳特区教育体系深圳特区教育体系"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintBottom_toBottomOf="@id/grow_up_main_scheme_item_lab"
        app:layout_constraintLeft_toRightOf="@id/grow_up_main_scheme_item_lab"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/grow_up_main_scheme_item_lab" />

    <TextView
        android:id="@+id/grow_up_main_scheme_item_use_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_4"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="536人使用"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grow_up_main_scheme_item_lab" />


</android.support.constraint.ConstraintLayout>