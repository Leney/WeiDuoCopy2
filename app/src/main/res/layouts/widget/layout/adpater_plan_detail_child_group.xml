<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/space_20">

    <View
        android:id="@+id/plan_detail_child_group_point"
        android:layout_width="@dimen/space_4"
        android:layout_height="@dimen/space_15"
        android:background="@color/main_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/plan_detail_child_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="阶段一 但是似懂非懂分"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/plan_detail_child_group_point"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>