<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/activity_reward_scrollview"
    android:scrollbars="none"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/activityresult_listview_item0"></include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_6"
            android:background="#f0f0f0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/space_10"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_15"
         >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/space_14"

                android:paddingRight="@dimen/space_10"
                android:paddingTop="@dimen/space_14"
                android:text="评分及标准"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_16" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_10">

                <TextView
                    style="@style/text2style_activityresult"
                    android:text="观察能力：" />

                <TextView
                    style="@style/text1style_activity_reward"
                    android:text="特别观察" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_10">

                <TextView
                    style="@style/text2style_activityresult"
                    android:text="注  意 力 ：" />

                <TextView
                    style="@style/text1style_activity_reward"
                    android:text="特别观察" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_10">

                <TextView
                    style="@style/text2style_activityresult"
                    android:text="身体技能：" />

                <TextView
                    style="@style/text1style_activity_reward"
                    android:text="特别观察" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_10">

                <TextView
                    style="@style/text2style_activityresult"
                    android:text="思维逻辑：" />

                <TextView
                    style="@style/text1style_activity_reward"
                    android:text="特别观察" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_6"
            android:background="#f0f0f0" />

        <TextView
            android:id="@+id/activity_reward_add_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/microrudder_add"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/space_14"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_10"
            android:paddingTop="@dimen/space_14"
            android:text="奖品设置"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_16" />

        <com.zhongke.weiduo.mvp.ui.widget.expandablelistview.CommonExpandableListView
            android:id="@+id/activity_reward_expandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.zhongke.weiduo.mvp.ui.widget.expandablelistview.CommonExpandableListView>

    </LinearLayout>

</ScrollView>