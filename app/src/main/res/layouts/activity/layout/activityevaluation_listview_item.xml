<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    android:paddingLeft="@dimen/space_8"
    android:paddingRight="@dimen/space_9"
    android:paddingTop="@dimen/space_12">

    <ImageView
        android:id="@+id/activityevaluation_icon_iv"
        android:layout_width="@dimen/space_60"
        android:layout_height="@dimen/space_60"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/space_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文青"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_16" />

            <TextView
                style="@style/text1style_activity_evaluation"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2017.6.22 10:43" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11.7dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text1style_activity_evaluation"
                android:text="价值匹配:" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_9"
            android:orientation="horizontal">

            <TextView
                style="@style/text1style_activity_evaluation"
                android:text="活动体验:" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:layout_marginTop="13.3dp"
            android:text="这次活动很成功，孩子们从中得到很多锻炼尤其是团队协作和勇气，希望多做些这样的活动"
            android:textSize="@dimen/space_14" />
        <TextView
            android:id="@+id/activityevaluation_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/space_19"
            android:background="#f0f0f0"/>
    </LinearLayout>


</LinearLayout>