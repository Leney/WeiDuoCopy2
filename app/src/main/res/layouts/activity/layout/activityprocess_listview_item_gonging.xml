<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        style="@style/text2Style_activity_process"
        android:text="执行" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />
    <TextView
        style="@style/text3Style_activity_process"
        android:drawableLeft="@drawable/activityprocess_green_bg_shape"
        android:text="执行前检查"
        android:layout_marginRight="@dimen/space_10"
        android:paddingBottom="@dimen/space_17"
        android:paddingTop="@dimen/space_17"
        android:textColor="#333333" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />
    <TextView
        android:id="@+id/activityprocess_listview_item_step1_tv"
        style="@style/text3Style_activity_process"
        android:drawableLeft="@drawable/activityprocess_green_bg_shape"
        android:text="步骤一"
        android:drawableRight="@drawable/right"
        android:layout_marginRight="@dimen/space_10"
        android:paddingBottom="@dimen/space_17"
        android:paddingTop="@dimen/space_17"
        android:textColor="#333333" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />
    <TextView
        style="@style/text3Style_activity_process"
        android:paddingBottom="@dimen/space_17"
        android:paddingTop="@dimen/space_17"
        android:drawableRight="@drawable/right"
        android:drawableLeft="@drawable/activityprocess_green_bg_shape"
        android:text="步骤二"
        android:layout_marginRight="@dimen/space_10"
        android:textColor="#333333" />
</LinearLayout>