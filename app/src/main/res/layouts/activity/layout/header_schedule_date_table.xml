<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/schedule_date_pick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/date_pick"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/year_and_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date_year_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="20sp"
                android:textColor="@color/black_text_color"
                android:text="2017"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/schedule_green_arrow"/>
        </LinearLayout>


        <TextView
            android:id="@+id/nian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="20sp"
            android:textColor="@color/black_text_color"
            android:text="@string/year"/>

        <LinearLayout
            android:id="@+id/month_and_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date_month_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="2dp"
                android:textColor="@color/black_text_color"
                android:text="01"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/schedule_green_arrow"/>
        </LinearLayout>


        <TextView
            android:id="@+id/yue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="2dp"
            android:textColor="@color/black_text_color"
            android:text="@string/month"/>

    </LinearLayout>

    <com.zhongke.weiduo.mvp.ui.widget.view.DateTableView
        android:id="@+id/date_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>