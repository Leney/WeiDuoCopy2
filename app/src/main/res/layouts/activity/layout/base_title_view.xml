<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_title_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bg">

    <ImageView
        android:id="@+id/base_title_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:src="@drawable/back_img" />

    <TextView
        android:id="@+id/base_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:text="标题"
        android:textColor="@color/white"
        android:textSize="@dimen/title_text_size" />

    <ImageView
        android:id="@+id/base_title_right_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:paddingLeft="@dimen/space_5"
        android:paddingRight="@dimen/space_5"
        android:src="@drawable/back_img"
        android:visibility="gone" />

    <TextView
        android:id="@+id/base_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:paddingRight="@dimen/space_10"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/title_text_size"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/title_bottom_line" />
</RelativeLayout>