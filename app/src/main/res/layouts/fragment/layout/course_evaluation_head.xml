<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="4.7分"
                android:textColor="#ffbe0d"
                android:textSize="24sp" />

            <com.zhongke.weiduo.mvp.ui.widget.view.StarBar
                android:id="@+id/sb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                android:text="1927条学习评价"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="45dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv5"
                    style="@style/text1style_course"
                    android:text="五星" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tv5_progress"
                    android:layout_toRightOf="@+id/tv5"
                    android:max="100"
                    android:progress="94"
                    android:progressDrawable="@drawable/progressbar" />

                <TextView
                    android:id="@+id/tv5_progress"
                    style="@style/text1style_course"
                    android:layout_alignParentRight="true"
                    android:text="94%" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv4"
                    style="@style/text1style_course"
                    android:text="四星" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tv4_progress"
                    android:layout_toRightOf="@+id/tv4"
                    android:max="100"
                    android:progress="3"
                    android:progressDrawable="@drawable/progressbar" />

                <TextView
                    android:id="@+id/tv4_progress"
                    style="@style/text1style_course"
                    android:layout_alignParentRight="true"
                    android:text="3%" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv3"
                    style="@style/text1style_course"
                    android:text="三星" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tv3_progress"
                    android:layout_toRightOf="@+id/tv3"
                    android:max="100"
                    android:progress="1"
                    android:progressDrawable="@drawable/progressbar" />

                <TextView
                    android:id="@+id/tv3_progress"
                    style="@style/text1style_course"
                    android:layout_alignParentRight="true"
                    android:text="1%" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv2"
                    style="@style/text1style_course"
                    android:text="二星" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tv2_progress"
                    android:layout_toRightOf="@+id/tv2"
                    android:max="100"
                    android:progress="1"
                    android:progressDrawable="@drawable/progressbar" />

                <TextView
                    android:id="@+id/tv2_progress"
                    style="@style/text1style_course"
                    android:layout_alignParentRight="true"
                    android:text="1%" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv1"
                    style="@style/text1style_course"
                    android:text="一星" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tv1_progress"
                    android:layout_toRightOf="@+id/tv1"
                    android:max="100"
                    android:progress="1"
                    android:progressDrawable="@drawable/progressbar" />

                <TextView
                    android:id="@+id/tv1_progress"
                    style="@style/text1style_course"
                    android:layout_alignParentRight="true"
                    android:text="1%" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f1f2f3" />
</LinearLayout>