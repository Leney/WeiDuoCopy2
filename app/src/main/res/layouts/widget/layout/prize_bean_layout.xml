<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.zhongke.weiduo.mvp.ui.widget.MyImageView
        android:id="@+id/iv_prize_pictor"
        android:layout_width="44.3dp"
        android:layout_height="44.3dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="11.3dp" />

    <TextView
        android:id="@+id/tv_prize_name"
        android:layout_width="44.3dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_prize_pictor"
        android:layout_below="@+id/iv_prize_pictor"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="多啦A梦"
        android:textColor="#999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_prize_pictor"
        android:layout_width="44.3dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_prize_pictor"
        android:layout_below="@+id/tv_prize_name"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="50金币"
        android:textColor="#ffbe0d"
        android:textSize="12sp" />
</RelativeLayout>