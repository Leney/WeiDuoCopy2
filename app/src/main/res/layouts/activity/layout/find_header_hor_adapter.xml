<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="@dimen/space_23"
              android:paddingRight="@dimen/space_23">

    <ImageView
        android:id="@+id/find_header_hor_item_icon"
        android:layout_width="@dimen/space_44"
        android:layout_height="@dimen/space_44"
        android:src="@drawable/ic_default"/>

    <TextView
        android:id="@+id/find_header_hor_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_4"
        android:text="习惯类"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/text_size_12"/>

</LinearLayout>