<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/space_15">

    <ImageView
        android:id="@+id/comment_imag"
        android:layout_width="@dimen/space_40"
        android:layout_height="@dimen/space_40"
        android:background="@drawable/wugeng"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/le_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_toRightOf="@id/comment_imag"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王大锤"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_16"/>

        <RatingBar
            android:id="@+id/rb"
            style="@style/customRatingbarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:numStars="5"
            android:rating="4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3016"
            android:textColor="#999999"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:text="2017.09.05"
            android:textColor="#cccccc"
            android:textSize="@dimen/text_size_12"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/le_name"
        android:layout_below="@id/le_name"
        android:layout_marginTop="@dimen/space_5"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="这次课程非常有趣，孩子们从中得到很多锻炼，尤其是团队协作和勇气，效率非常高，教得也非常好。"
        android:textColor="#666666"
        android:textSize="@dimen/text_size_14"/>

</RelativeLayout>