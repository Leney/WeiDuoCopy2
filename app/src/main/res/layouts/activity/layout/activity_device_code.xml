<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/device_code_show_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/device_code_show_iv"
        app:layout_constraintRight_toRightOf="@+id/device_code_show_iv"
        app:layout_constraintLeft_toLeftOf="@+id/device_code_show_iv"
        android:layout_marginTop="15dp"
        android:text="扫一扫二维码，可绑定设备"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>